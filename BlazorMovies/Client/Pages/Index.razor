@page "/"


<p>Hello, @StringUtilities.CustomToUpper(name)</p>

<p>Lets add 2 + 2 = @(2+2)</p>

<button @onclick="@WriteInLog">CLICK ME</button>

<div>
    <h1>Movie</h1>
    <p>Title: <b>@fearandloathing.Title</b></p>
    <p>Release Date: <b>@fearandloathing.RealeaseDate.ToString("dd MMM yyy")</b></p>
</div>


@code{
    string name = "Justin";

    BlazorMovies.Shared.Entities.Movie fearandloathing = new BlazorMovies.Shared.Entities.Movie()
    {
        Title = "Fear and Loathing in Las Vegas",
        RealeaseDate = new DateTime(2017, 7, 2)
    };


    string CustomToUpper(string value) => value.ToUpper();

    void WriteInLog()
    {

        Console.WriteLine("Ive been clicked in app");
    }
}